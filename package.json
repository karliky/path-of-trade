{
  "name": "path-of-trade",
  "version": "1.0.0",
  "description": "Path of Diablo trading made easy",
  "main": "build/main.js",
  "scripts": {
    "test": "set NODE_ENV=test&& mocha --timeout 10000 -r ts-node/register tests/**/*.spec.ts",
    "test:build": "set NODE_ENV=test&& npm explore winapi -- npm install && mocha -r ts-node/register tests/**/*.spec.ts",
    "watch": "tsc -w",
    "build": "tsc && node ./build/builder.js",
    "start": "npm run build && electron ./build/main.js",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "nodeGypRebuild": "true",
  "build": {
    "appId": "path.of.trade",
    "files": [
      "build/**/*"
    ]
  },
  "author": "Carlos Hernández Gómez - Karliky",
  "license": "Unlicense",
  "devDependencies": {
    "electron-rebuild": "^1.8.6",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "mocha": "^6.2.2",
    "should": "^13.2.3",
    "ts-node": "^8.4.1",
    "electron": "6.1.4",
    "electron-builder": "^22.1.0"
  },
  "dependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jimp": "^0.2.28",
    "@types/mocha": "^5.2.7",
    "@types/should": "^13.0.0",
    "bindings": "^1.5.0",
    "fs-extra": "^8.1.0",
    "jimp": "^0.8.5",
    "typescript": "^3.6.4",
    "winapi": "file:../winapi"
  }
}
